<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Svarozhich.App"
             xmlns:local="using:Svarozhich"
             RequestedThemeVariant="Dark">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <DockFluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="Inter18PtRegular">/Assets/Fonts/Inter/static/Inter_18pt-Regular.ttf#Inter 18pt Regular</FontFamily>
        <FontFamily x:Key="Inter18PtSemiBold">/Assets/Fonts/Inter/static/Inter_18pt-SemiBold.ttf#Inter 18pt SemiBold</FontFamily>

        <ControlRecycling x:Key="ControlRecyclingKey" TryToUseIdAsKey="True" />
    </Application.Resources>
</Application>