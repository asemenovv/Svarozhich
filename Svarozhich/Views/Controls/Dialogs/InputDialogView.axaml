<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Svarozhich.Views.Controls.Dialogs.InputDialogView"
        Width="300" Height="120" WindowStartupLocation="CenterOwner" CanResize="False">
    <StackPanel Margin="10" Spacing="8">
        <TextBlock x:Name="CaptionText"/>
        <TextBox x:Name="InputBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="OK" Width="70" IsDefault="True" Click="OkClick" />
            <Button Content="Cancel" Width="70" Click="CancelClick" />
        </StackPanel>
    </StackPanel>
</Window>
