<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Svarozhich.Views.Controls.Dialogs.InputDialogView"
        Width="300" Height="160" WindowStartupLocation="CenterOwner" CanResize="False">
    <StackPanel Margin="10" Spacing="8">
        <TextBlock x:Name="InputCaptionText"/>
        <TextBox x:Name="InputBox" />
        <CheckBox x:Name="InputCheckBox"></CheckBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" HorizontalContentAlignment="Center" Width="96" IsDefault="True" Click="OkClick" />
            <Button Content="Cancel" HorizontalContentAlignment="Center" Width="96" Click="CancelClick" Margin="30, 0, 0, 0" />
        </StackPanel>
    </StackPanel>
</Window>
